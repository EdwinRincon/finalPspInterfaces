function json2table(json, classes) {
    var cols = Object.keys(json);
    var rows = Object.values(json);
    var headerRow = '';
    var bodyRows = '';
    
    classes = classes || '';
  
    function capitalizeFirstLetter(string) {
      return string.charAt(0).toUpperCase() + string.slice(1);
    }
  
    cols.map(function(col) {
      headerRow += '<th>' + capitalizeFirstLetter(col) + '</th>';
    });
  
    cols.map(function(row) {
      bodyRows += '<tr>';
  
      cols.map(function(colName) {
        bodyRows = '<td>' + rows[2]+ '</td>' + '<td>' + rows[3]+ '</td>' + '<td>' + rows[0] + '</td>' + '<td>' + rows[1]+ '</td>' + '<td>' + '<button id="botonEditar" class="btn btn-warning"> <i class="fas fa-user-edit"></i>\</td>' + '<td>' + '<button class="btn btn-danger"> <i class="fas fa-user-times"></i>\</td>';
        
      })
      
      
        
     
      
      
    });
  
    return '<table class="' + classes +'"><tbody>' + bodyRows + '</tbody></table>';
  }
  
